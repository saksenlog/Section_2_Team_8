<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>com.test.webapp.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <servlet-class>com.test.webapp.servlet.UserRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DonorLoginServlet</servlet-name>
        <servlet-class>com.test.webapp.servlet.DonorLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustodianLoginServlet</servlet-name>
        <servlet-class>com.test.webapp.servlet.CustodianLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HospitalLoginServlet</servlet-name>
        <servlet-class>com.test.webapp.servlet.HospitalLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DonorDeclarationServlet</servlet-name>
        <servlet-class>com.test.webapp.servlet.DonorDeclarationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <url-pattern>/UserRegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DonorLoginServlet</servlet-name>
        <url-pattern>/DonorLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustodianLoginServlet</servlet-name>
        <url-pattern>/CustodianLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HospitalLoginServlet</servlet-name>
        <url-pattern>/HospitalLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DonorDeclarationServlet</servlet-name>
        <url-pattern>/DonorDeclarationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            home.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
